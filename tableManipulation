CREATE TABLE friends (
	id INTEGER, name TEXT, birthday DATE
  );
  
INSERT INTO friends (id, name, birthday) VALUES (1, 'Jane Doe', '1990-05-30');

INSERT INTO friends (id, name, birthday) VALUES (2, 'John Smith', '1985-02-17');

INSERT INTO friends (id, name, birthday) VALUES (3, 'Quinn Quirky', '1990-12-12');

UPDATE friends
SET name = 'Jane Smith'
WHERE id = 1;

ALTER TABLE friends
ADD COLUMN email TEXT;

UPDATE friends
SET email = 'jane@codecademy.com'
WHERE id = 1;

UPDATE friends
SET email = 'john@codecademy.com'
WHERE id = 2;

UPDATE friends
SET email = 'quinn@codecademy.com'
WHERE id = 3;

DELETE from friends
WHERE id = 1;



SELECT * FROM friends;
